<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-permission android:name="android.permission.POST_NOTIFICATIONS" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.CatSafe"
        tools:ignore="ExtraText"
        tools:targetApi="31">

        <receiver android:name="com.example.catsafe.NotificationReceiver" />

        <activity
            android:name=".teste"
            android:exported="false" />

        <activity
            android:name="com.example.catsafe.Historico"
            android:exported="false" />

        <activity
            android:name="com.example.catsafe.CadastrarPet"
            android:exported="false" />

        <activity
            android:name="com.example.catsafe.Login"
            android:exported="true"
            android:theme="@style/Theme.CatSafe">
        </activity>

        <activity android:name="com.example.catsafe.MainActivity"
            android:exported="true">
        </activity>

        <activity android:name="com.example.catsafe.FormaDeDespejo" />

        <activity
            android:name="com.example.catsafe.Cadastro"
            android:exported="true"
            android:theme="@style/Theme.CatSafe" />

        <activity
            android:name="com.example.catsafe.Splash"
            android:exported="true"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

    </application>

</manifest>

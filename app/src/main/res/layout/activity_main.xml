<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:fitsSystemWindows="true"
    tools:openDrawer="start"
    tools:context="com.example.catsafe.MainActivity">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/constraintLayout"
            android:layout_width="409dp"
            android:layout_height="642dp"
            android:background="@drawable/bordas_card"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@+id/view"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/view"
            app:layout_constraintVertical_bias="1.0">

                <ImageButton
                    android:id="@+id/imageButton2_menu"
                    android:layout_width="70dp"
                    android:layout_height="75dp"
                    android:backgroundTint="@color/white"
                    android:scaleType="fitCenter"
                    android:src="@drawable/menu"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.045"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="0.027" />

                <TextView
                    android:id="@+id/textView_notificacao1"
                    android:layout_width="394dp"
                    android:layout_height="72dp"
                    android:background="#ECF0F3"
                    android:padding="10sp"
                    android:paddingStart="15sp"
                    android:paddingLeft="10sp"
                    android:paddingTop="10sp"
                    android:paddingEnd="10sp"
                    android:paddingRight="10sp"
                    android:textSize="22sp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.39"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="0.592" />

                <TextView
                    android:id="@+id/textView_notificacao2"
                    android:layout_width="394dp"
                    android:layout_height="72dp"
                    android:background="#ECF0F3"
                    android:padding="10sp"
                    android:paddingStart="15sp"
                    android:paddingLeft="10sp"
                    android:paddingTop="10sp"
                    android:paddingEnd="10sp"
                    android:paddingRight="10sp"
                    android:textSize="22sp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.39"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="0.732" />

                <TextView
                    android:id="@+id/textView_notificacao3"
                    android:layout_width="394dp"
                    android:layout_height="72dp"
                    android:background="#ECF0F3"
                    android:padding="10sp"
                    android:paddingStart="15sp"
                    android:paddingLeft="10sp"
                    android:paddingTop="10sp"
                    android:paddingEnd="10sp"
                    android:paddingRight="10sp"
                    android:textSize="22sp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.39"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="0.87" />


                <TextView
                    android:id="@+id/textView_painelHoras"
                    android:layout_width="330dp"
                    android:layout_height="100dp"
                    android:background="@color/roxo_claro"
                    android:padding="10sp"
                    android:paddingStart="15sp"
                    android:paddingLeft="10sp"
                    android:paddingTop="10sp"
                    android:paddingEnd="10sp"
                    android:paddingRight="10sp"
                    android:textSize="22sp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.493"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="0.282" />

                <TextView
                    android:id="@+id/textView4_horarioPainel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="desconectado"
                    android:textColor="@color/white"
                    android:fontFamily="@font/dangrek"
                    android:textSize="45dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="0.286" />

                <TextView
                    android:id="@+id/textView_historicoTexto"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Histórico:"
                    android:textColor="@color/azul_escuro"
                    android:textSize="24sp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.123"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="0.47" />

                <ImageButton
                    android:id="@+id/imageButton2"
                    android:layout_width="70dp"
                    android:layout_height="63dp"
                    android:src="@drawable/gato_peixe"
                    android:scaleType="fitCenter"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.046"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="0.723"
                    tools:srcCompat="@tools:sample/avatars" />

                <ImageButton
                    android:id="@+id/imageButton1"
                    android:layout_width="70dp"
                    android:layout_height="63dp"
                    android:scaleType="fitCenter"
                    android:src="@drawable/gato_comendo"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.046"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="0.597"
                    tools:srcCompat="@tools:sample/avatars" />

                <ImageButton
                    android:id="@+id/imageButton3"
                    android:layout_width="70dp"
                    android:layout_height="63dp"
                    android:scaleType="fitCenter"
                    android:src="@drawable/gato_fome"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.046"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="0.872"
                    tools:srcCompat="@tools:sample/avatars" />

                <TextView
                    android:id="@+id/textView_textoNotificacao1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Tom comeu à 5 horas."
                    android:textColor="@color/azul_escuro"
                    android:textSize="20sp"
                    app:layout_constraintBottom_toBottomOf="@+id/textView_notificacao1"
                    app:layout_constraintEnd_toEndOf="@+id/textView_notificacao1"
                    app:layout_constraintHorizontal_bias="0.451"
                    app:layout_constraintStart_toStartOf="@+id/textView_notificacao1"
                    app:layout_constraintTop_toTopOf="@+id/textView_notificacao1"
                    app:layout_constraintVertical_bias="0.48" />

                <TextView
                    android:id="@+id/textView_textoNotificacao2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Tom finalizou a porção de ração."
                    android:textColor="@color/azul_escuro"
                    android:textSize="20sp"
                    app:layout_constraintBottom_toBottomOf="@+id/textView_notificacao2"
                    app:layout_constraintEnd_toEndOf="@+id/textView_notificacao2"
                    app:layout_constraintHorizontal_bias="0.865"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="@+id/textView_notificacao2"
                    app:layout_constraintVertical_bias="0.48" />

                <TextView
                    android:id="@+id/textView_textoNotificacao3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Esse miauu pode ser fome, ein..."
                    android:textColor="@color/azul_escuro"
                    android:textSize="20sp"
                    app:layout_constraintBottom_toBottomOf="@+id/textView_notificacao3"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.79"
                    app:layout_constraintStart_toStartOf="@+id/textView_notificacao3"
                    app:layout_constraintTop_toTopOf="@+id/textView_notificacao3"
                    app:layout_constraintVertical_bias="0.44" />

                <TextView
                    android:id="@+id/textView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Status do comedouro:"
                    android:textColor="@color/black"
                    android:textSize="20dp"
                    app:layout_constraintBottom_toTopOf="@+id/textView_painelHoras"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.173"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="0.937" />

                <com.google.android.material.bottomnavigation.BottomNavigationView
                     android:id="@+id/bottom_navigation"
                     android:layout_width="415dp"
                     android:layout_height="75dp"
                     android:background="@color/roxo_claro"
                     app:itemIconTint="@color/white"
                     app:itemTextColor="@color/white"
                     app:itemIconSize="37dp"
                     app:menu="@menu/bottom_nav_menu"
                     app:layout_constraintBottom_toBottomOf="parent"
                     app:layout_constraintEnd_toEndOf="parent"
                     app:layout_constraintStart_toStartOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <com.google.android.material.navigation.NavigationView
            android:id="@+id/nav_view"
            android:layout_width="300dp"
            android:layout_height="match_parent"
            android:layout_gravity="left"
            android:background="@color/roxo_escuro"
            app:headerLayout="@layout/nav_header"
            app:menu="@menu/drawer_menu"
            app:itemTextColor="@color/white"
            app:itemIconTint="@color/white"
            app:itemHorizontalPadding="30dp">
        </com.google.android.material.navigation.NavigationView>

</androidx.drawerlayout.widget.DrawerLayout>